@using WebApp.Helpers;
<script src="~/Scripts/Views/vCategoria.js"></script>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="innerpage-wrapper">
    <div id="dashboard" class="">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12 col-xl-12">
                    <div class="dashboard-heading">
                        <h2>Sección <span>Categorías</span></h2>
                        <p>Mantenimiento de categorías</p>
                        <p>Le presentamos el mantenimiento de categorías, aquí tiene permitido registrar nuevas categorías y tener un seguimiento de ellas.</p>
                    </div><!-- end dashboard-heading -->

                    <div class="dashboard-wrapper mb-lg-5">
                        <div class="row">

                            <div class="col-12 col-md-2 col-lg-2 dashboard-nav">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item" role="presentation" data-div="registrarCategoria">
                                        <a class="nav-link" href=""><span><i class="fa fa-user"></i></span>Registrar</a>
                                    </li>
                                    <li class="nav-item active" role="presentation" data-div="listaCategoria">
                                        <a class="nav-link" href=""><span><i class="fa fa-user"></i></span>Listar</a>
                                    </li>
                                </ul>
                            </div><!-- end columns -->

                            <div class="col-12 col-md-10 col-lg-10 booking-trips content" id="home_content" style="margin-top: 20px;">
                                <!--===== inicia vista listar =====-->
                                <div style="margin-top: 20px;" id="listaCategoria" class="d-inline">
                                    @Html.CtrlTable(viewName: "vCategoria", id: "tblCategoria", title: "Lista de categorías",
                                    columnsTitle: "Nombre,Descripción,Estado", ColumnsDataName: "Nombre,Descripcion,Estado", onSelectFunction: "BindFields", colorHeader:"red")


                                </div>
                                <!--===== termina vista listar =====-->
                                <!--===== inicia vista registrar =====-->
                                <div style="margin-top: 20px;" id="crearCategoria" class="d-none">
                                    <!--===== INNERPAGE-WRAPPER ====-->
                                    <div class="custom-form custom-form-fields text-center">
                                        <div class="container">
                                            <div class="row justify-content-center">
                                                <h3>Registrar</h3>
                                            </div>
                                            <div class="row justify-content-center">
                                                <p>Por favor complete la información que se le solicita a continuación.</p>
                                            </div>
                                        </div>

                                        <form class="" id="frmCreate" method="get" action="">
                                            <div class="row align-content-sm-center">
                                                <div class="col-sm-12 text-center">
                                                    <div class="form-row">
                                                        <div class="col-lg-6">
                                                            @Html.CtrlIconInput(id: "txtCodigo", type: "number", icon: "fa fa-id-card", required: true,
                                                                    placeHolder: "Código", columnDataName: "Codigo")
                                                        </div>
                                                        <div class="col-lg-6">
                                                            @Html.CtrlIconInput(id: "txtNombre", type: "text", icon: "fa fa-id-card", required: true,
                                                                    placeHolder: "Nombre", columnDataName: "Nombre")
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-lg-6">
                                                            @Html.CtrlTextArea(id: "txtDescripcion", _class: "", type: "text", label: "Descripción",
                                                                    placeHolder: "Descripción", columnDataName: "Descripcion", rows: 1)
                                                        </div>
                                                      
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        <div class="align-content-center">
                                            @Html.CtrlButton(viewName: "vCategoria", id: "btnCreate", type:"button", label: "Registrar", onClickFunction: "ValidarInputsCrear", buttonType: "info")

                                        </div>
                                    </div><!-- end form-content -->
                                </div>
                                <!--===== termina vista registrar =====-->
                                <!--===== inicia vista modificar =====-->
                                <div style="margin-top: 20px;" id="modificarCategoria" class="d-none">
                                    <div class="custom-form custom-form-fields text-center">
                                        <div class="container-fluid">
                                            <div class="row justify-content-center">
                                                <h3>Modificar</h3>
                                            </div>
                                            <div class="row justify-content-center">
                                                <p>Por favor complete la información que se le solicita a continuación.</p>
                                            </div>
                                        </div>

                                        <form class="" id="frmEdition" method="get" action="">
                                            <div class="row align-content-center">
                                                <div class="col-lg-12 text-center">
                                                    <div class="form-row">
                                                        <div class="row">
                                                            <div class="w-100"></div>
                                                            <div class="col-lg-6">
                                                                <fieldset disabled/>
                                                                    @Html.CtrlInput(id: "txtCodigo", type: "text", label: "Código",
                                                                            placeHolder: "Código", columnDataName: "Codigo")
                                                            </div>
                                                            <div class="col-lg-6">
                                                                @Html.CtrlInput(id: "txtNombre", type: "text", label: "Nombre",
                                                                        placeHolder: "Nombre", columnDataName: "Nombre")
                                                            </div>
                                                            <div class="w-100"></div>
                                                            <div class="col-lg-6">
                                                                @Html.CtrlTextArea(id: "txtDescripcion", type: "text", label: "Descripción",
                                                                        placeHolder:"Descripción", columnDataName: "Descripcion")
                                                            </div>
                                                            <div class="col-lg-6">
                                                                
                                                                    @Html.CtrlDropDown(id: "txtEstado", listId: "LST_ESTADO_CATEGORIAS", label: "Estado", columnDataName: "IdEstado")
                                                              
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        <div class="align-content-center">

                                            @Html.CtrlButton(viewName: "vCategoria", id: "btnUpdate", type:"button", label: "Modificar", onClickFunction: "ValidarInputsModificar", buttonType: "info")
                                            @Html.CtrlButton(viewName: "vCategoria", id: "btnDelete", type: "button", label: "Eliminar", onClickFunction: "Delete", buttonType: "danger")

                                        </div>
                                    </div>
                                </div>
                                <!--===== termina vista modificar =====-->

                                <div style="margin-top: 20px;" id="modificarCategoria" class="d-none">
                                    <p>Modificar</p>
                                </div>
                            </div><!-- end columns -->

                        </div><!-- end row -->
                    </div><!-- end dashboard-wrapper -->
                </div><!-- end columns -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end dashboard -->
</section>