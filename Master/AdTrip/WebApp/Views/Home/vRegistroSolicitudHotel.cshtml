@using WebApp.Helpers;
<script src="~/Scripts/Views/vRegistroSolicitudHotel.js"></script>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--===== INNERPAGE-WRAPPER ====-->
<div class="container">
    <div class="dashboard-heading">
        <h2>Envio de <span>solicitud de hotel</span></h2>
    </div><!-- end dashboard-heading -->
    <div class="custom-form custom-form-fields text-center">
        <div class="container">
            <div class="row justify-content-center">
                <h3>Formulario</h3>
            </div>
            <div class="row justify-content-center">
                <p>Por favor complete la información que se le solicita a continuación.</p>

            </div>
        </div>


        <form class="" id="frmEdition">
            <div class="row align-content-sm-center">
                <div class="col-sm-12">

                    <h5>Legales</h5>
                    <div class="form-row">
                        <div class="col-lg-4">
                            @Html.CtrlIconInput(id: "txtEmpresa", type: "text", icon: "fa fa-id-card", required: true,
                                    placeHolder:"Empresa dueña", columnDataName: "EmpresaDuenna")
                        </div>
                        <div class="col-lg-4">
                            @Html.CtrlIconInput(id: "txtCedulaJ", type: "text", icon: "fa fa-id-card", required: true,
                                    placeHolder: "Cédula jurídica", columnDataName: "CedulaJuridica")
                        </div>
                        <div class="col-lg-4">
                            @Html.CtrlIconInput(id: "txtClasificacion", type: "number", icon: "fa fa-star", required: true,
                                    placeHolder: "Clasificación(estrellas)", columnDataName: "Clasificacion")
                        </div>
                    </div>
                    <h5>Hotel</h5>
                    <div class="form-row mb-lg-4">
                        <div class="col-md-6">
                            @Html.CtrlIconInput(id: "txtNombre", type: "text", icon: "fa fa-id-card", required: true,
                                      placeHolder: "Nombre", columnDataName: "Nombre")
                        </div>
                        <div class="col-md-6">
                            @Html.CtrlIconInput(id: "txtCadena", type: "text", icon: "fa fa-id-card", required: false,
                                    placeHolder: "Cadena", columnDataName: "Cadena")
                        </div>

                        <div class="col-lg-12">
                            @Html.CtrlIconInput(id: "txtDireccion", type: "text", icon: "fa fa-map-marker", required: true,
                                    placeHolder: "Dirección", columnDataName: "Direccion")

                        </div>
                        <div class="col-lg-12">
                            @*@Html.CtrlIconInput(id: "txtDescripcion", type: "text", icon: "fa fa-id-card", required: true,
                                placeHolder: "Descripción", columnDataName: "Descripcion")*@
                            @Html.CtrlTextArea(id: "txtDescripcion", type: "text", label: "Descripción", columnDataName: "Descripcion")
                        </div>
                    </div>

                    <h5>Usuario</h5>
                    <div class="form-row mb-lg-4">
                        <div class="col-md-4">
                            @Html.CtrlIconInput(id: "txtIDUsuario", type: "text", icon: "fa fa-user", required: true,
                                    placeHolder:"Identificación", columnDataName: "IdUsuario")
                        </div>
                        <div class="col-md-4">
                            @Html.CtrlIconInput(id: "txtNombreUsuario", type: "text", icon: "fa fa-user", required: true,
                                    placeHolder:"Nombre", columnDataName: "NombreUsuario")
                        </div>
                        <div class="col-md-4">
                            @Html.CtrlIconInput(id: "txtCorreoUsuario", type: "text", icon: "fa fa-user", required: true,
                                    placeHolder:"Correo electrónico", columnDataName: "CorreoUsuario")
                        </div>
                    </div>


                </div>

            </div>
        </form>
        @Html.CtrlButton(viewName: "vRegistroSolicitudHotel", id: "btnCreate", type: "button", label: "Enviar registro", onClickFunction: "ValidarInputs", buttonType: "info")


    </div><!-- end form-content -->

</div>
